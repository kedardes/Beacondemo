<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:orientation="vertical"
    tools:context="com.i360.estimotedemo.NotifyDemoActivity" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:text="You can lock your device now. \n\n Keep awat from beacon and come back. Pay attention to notificatin bar." />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:padding="5dp"
        android:background="@android:color/holo_orange_dark"
        android:textColor="@android:color/white"
        android:text="Last posted notification:"
        android:textSize="18dp"
        ></TextView>
    
    <TextView
        android:id="@+id/status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:background="@android:color/holo_orange_light"
        android:textColor="@android:color/black"
        android:text="None"
        android:textSize="18dp"
        ></TextView>
    
</LinearLayout>
